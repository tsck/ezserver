{
  "name": "kwik-e-serve",
  "description": "Simple command-line HTTP Server",
  "version": "0.0.0-development",
  "main": "dist/index.js",
  "author": "Terrence Keane",
  "license": "MIT",
  "homepage": "https://github.com/tsck/kwik-e-serve#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/tsck/kwik-e-serve.git"
  },
  "bugs": {
    "url": "https://github.com/tsck/kwik-e-serve/issues"
  },
  "keywords": [
    "simple",
    "http",
    "server"
  ],
  "devDependencies": {
    "commitizen": "2.8.6",
    "cz-conventional-changelog": "1.2.0",
    "eslint": "3.12.2",
    "eslint-config-google": "0.7.1",
    "ghooks": "1.3.2",
    "mime-types": "2.1.13",
    "npm-run-all": "3.1.2",
    "rimraf": "2.5.4",
    "semantic-release": "6.3.2",
    "webpack": "1.14.0"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm-run-all build:*",
    "build:umd": "webpack --output-filename index.js",
    "build:umd.min": "webpack --output-filename index.min.js -p",
    "commit": "git-cz",
    "lint": "eslint --ignore-pattern *.test.js src",
    "watch:test": "npm t -- -w",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint"
    }
  }
}
